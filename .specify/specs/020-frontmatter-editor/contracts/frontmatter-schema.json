{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mdxpad.dev/schemas/frontmatter.schema.json",
  "title": "Frontmatter Schema",
  "description": "Schema for defining frontmatter field types, validation rules, and UI hints in mdxpad",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "properties": {
      "type": "object",
      "description": "Field definitions",
      "additionalProperties": {
        "$ref": "#/definitions/fieldSchema"
      }
    },
    "required": {
      "type": "array",
      "description": "List of required field names",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    }
  },
  "definitions": {
    "fieldSchema": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "array", "object"],
          "description": "Field data type"
        },
        "format": {
          "type": "string",
          "enum": ["date", "date-time", "email", "uri", "uuid"],
          "description": "Format hint for string fields"
        },
        "description": {
          "type": "string",
          "description": "Human-readable field description (shown as tooltip)"
        },
        "default": {
          "description": "Default value for the field"
        },
        "minLength": {
          "type": "integer",
          "minimum": 0,
          "description": "Minimum string length"
        },
        "maxLength": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum string length"
        },
        "minimum": {
          "type": "number",
          "description": "Minimum numeric value"
        },
        "maximum": {
          "type": "number",
          "description": "Maximum numeric value"
        },
        "pattern": {
          "type": "string",
          "description": "Regex pattern for string validation"
        },
        "enum": {
          "type": "array",
          "description": "Allowed values (renders as dropdown)"
        },
        "items": {
          "$ref": "#/definitions/fieldSchema",
          "description": "Schema for array items"
        },
        "properties": {
          "type": "object",
          "description": "Schema for nested object properties",
          "additionalProperties": {
            "$ref": "#/definitions/fieldSchema"
          }
        },
        "x-frontmatter": {
          "type": "object",
          "description": "mdxpad-specific extensions",
          "properties": {
            "suggested": {
              "type": "boolean",
              "description": "Show in 'Add Field' suggestions",
              "default": false
            },
            "order": {
              "type": "integer",
              "description": "Display order (lower = first)",
              "default": 100
            },
            "hidden": {
              "type": "boolean",
              "description": "Hide from visual editor (raw mode only)",
              "default": false
            },
            "placeholder": {
              "type": "string",
              "description": "Input placeholder text"
            }
          }
        }
      },
      "required": ["type"]
    }
  },
  "examples": [
    {
      "$schema": "https://mdxpad.dev/schemas/frontmatter.schema.json",
      "properties": {
        "title": {
          "type": "string",
          "description": "Document title",
          "x-frontmatter": {
            "suggested": true,
            "order": 1
          }
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Publication date",
          "x-frontmatter": {
            "suggested": true,
            "order": 2
          }
        },
        "author": {
          "type": "string",
          "description": "Author name",
          "x-frontmatter": {
            "suggested": true,
            "order": 3
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Post tags",
          "x-frontmatter": {
            "suggested": true,
            "order": 4
          }
        },
        "draft": {
          "type": "boolean",
          "default": false,
          "description": "Draft status",
          "x-frontmatter": {
            "suggested": true,
            "order": 5
          }
        }
      },
      "required": ["title"]
    }
  ]
}
